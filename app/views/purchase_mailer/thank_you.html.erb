<h1>Thank you for purchasing from RainyDae DIY</h1>
<h4>This is your order confirmation</h4>

<strong>Name:</strong>  <%= @checkout.name %> <br>
<strong>Email:</strong> <%= @checkout.email %><br>
<strong><%= @checkout.zip %></strong>
<br>
<hr>
<table class="table">
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Unit Price</th>
  </tr>
    {{# each cart.items }}
    <tr>
      <td>
        {{# link-to "product" this.product }}
          <img {{ bind-attr src=this.product.image }} height="50" width="50">
          {{ product.name }}
        {{/ link-to }}
      <td>{{ quantity }}</td>
      <td>${{ to_dollars subtotal }}</td>
    </tr>
  {{/ each }}
</table>

<strong>Order Total:</strong> ${{ to_dollars cart.total }}


